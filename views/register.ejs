<% layout('layout/boilerplate') %> 
<h1 class="text-center mt-4"  > Create a New Account </h1>
<form action="/register" method="post">
    <input class="form-control mt-4 mb-4" type="text" name="username" placeholder="Enter your Username" required>
    <input class="form-control mb-4" type="email" name="email" placeholder="Enter your Email" required>
    <input class="form-control mb-4" type="number" name="Number" placeholder="Enter your Number" >
    <input class="form-control mb-4" type="password" name="password" placeholder="Enter your Password" required>
    <input class="form-control mb-4" type="password" name="cpassword" placeholder="Confirm your Password" required>
    <button class="btn btn-success mb-3"> Submit </button>
</form>
<p class="text-muted">Already have an account <a href="/login"> login </a> </p>