<% layout('layout/boilerplate') %> 
<h1 class="text-center mt-4"  > Login to your Account </h1>
<form action="/login" method="post">
    <input class="form-control mt-4 mb-4" type="text" name="username" placeholder="Enter your Username" required>
    <input class="form-control mb-4" type="password" name="password" placeholder="Enter your Password" required>
    <button class="btn btn-success mb-3"> Login </button>
</form>
<p class="text-muted">Not have an account? <a href="/register"> create a new one </a> </p>

